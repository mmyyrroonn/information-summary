generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AiRunKind {
  TWEET_CLASSIFY
  REPORT_SUMMARY
}

enum AiRunStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}

enum BackgroundJobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}

enum SubscriptionStatus {
  SUBSCRIBED
  UNSUBSCRIBED
}

model Subscription {
  id            String   @id @default(uuid())
  screenName    String   @unique
  displayName   String?
  avatarUrl     String?
  note          String?
  tags          String[] @default([])
  status        SubscriptionStatus @default(SUBSCRIBED)
  unsubscribedAt DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  lastFetchedAt DateTime?
  tweets        Tweet[]

  @@index([status, lastFetchedAt])
}

model Tweet {
  id             String   @id @default(uuid())
  tweetId        String   @unique
  subscription   Subscription @relation(fields: [subscriptionId], references: [id])
  subscriptionId String
  authorName     String
  authorScreen   String
  text           String
  lang           String?
  raw            Json
  tweetedAt      DateTime
  createdAt      DateTime @default(now())
  tweetUrl       String?
  processedAt    DateTime?
  abandonedAt    DateTime?
  abandonReason  String?
  insights       TweetInsight?
}

model TweetInsight {
  id          String   @id @default(uuid())
  tweet       Tweet    @relation(fields: [tweetId], references: [tweetId])
  tweetId     String   @unique
  verdict     String
  summary     String?
  importance  Int?
  tags        String[]
  suggestions String?
  embedding           Float[] @default([])
  embeddingModel     String?
  embeddingDimensions Int?
  embeddingTextHash  String?
  embeddedAt         DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  aiRun       AiRun?   @relation(fields: [aiRunId], references: [id])
  aiRunId     String?
}

model AiRun {
  id          String      @id @default(uuid())
  kind        AiRunKind
  status      AiRunStatus @default(PENDING)
  prompt      String?
  response    String?
  error       String?
  createdAt   DateTime    @default(now())
  completedAt DateTime?
  insights    TweetInsight[]
  report      Report?
}

model Report {
  id             String   @id @default(uuid())
  periodStart    DateTime
  periodEnd      DateTime
  headline       String
  content        String
  outline        Json?
  createdAt      DateTime @default(now())
  publishedAt    DateTime?
  aiRun          AiRun?   @relation(fields: [aiRunId], references: [id])
  aiRunId        String?  @unique
  profile        ReportProfile? @relation(fields: [profileId], references: [id])
  profileId      String?
  deliveredAt    DateTime?
  deliveryTarget String?
}

model ReportProfile {
  id                     String   @id @default(uuid())
  name                   String
  enabled                Boolean  @default(true)
  scheduleCron           String
  windowHours            Int
  timezone               String
  includeTweetTags       String[] @default([])
  excludeTweetTags       String[] @default([])
  includeAuthorTags      String[] @default([])
  excludeAuthorTags      String[] @default([])
  minImportance          Int      @default(2)
  verdicts               String[] @default([])
  groupBy                String   @default("cluster")
  aiFilterEnabled        Boolean  @default(true)
  aiFilterPrompt         String?
  aiFilterMaxKeepPerChunk Int?
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
  reports                Report[]

  @@index([enabled, scheduleCron])
}

model NotificationConfig {
  id                Int      @id @default(1)
  tgBotToken        String?
  tgChatId          String?
  tgMessageThreadId String?
  updatedAt         DateTime @updatedAt
}

model BackgroundJob {
  id           String              @id @default(uuid())
  type         String
  payload      Json?
  status       BackgroundJobStatus @default(PENDING)
  attempts     Int                 @default(0)
  maxAttempts  Int                 @default(3)
  scheduledAt  DateTime            @default(now())
  lockedAt     DateTime?
  lockedBy     String?
  completedAt  DateTime?
  lastError    String?
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt

  @@index([status, scheduledAt])
  @@index([type, status])
}

model SystemLock {
  key       String   @id
  lockedBy  String?
  lockedAt  DateTime?
  expiresAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
